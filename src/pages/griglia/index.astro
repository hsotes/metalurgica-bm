---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { siteConfig, grigliaProducts } from '../../config/site';

const { contact } = siteConfig;
const { models, accessories } = grigliaProducts;

// Galerías de proyectos realizados
const parrillasHierro = [
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.35.jpeg', titulo: 'Parrilla con guillotina', desc: 'Sistema completo con puerta guillotina y cajones inferiores' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.12.jpeg', titulo: 'Parrilla grande', desc: 'Modelo 1600mm con ladrillo refractario y cajones' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.17.jpeg', titulo: 'Diseño compacto', desc: 'Parrilla cerrada minimalista con tiradores de acero' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.39.jpeg', titulo: 'Estilo moderno', desc: 'Líneas rectas con mesada de acero' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.35 (1).jpeg', titulo: 'En taller', desc: 'Fabricación de cierre completo' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.35 (2).jpeg', titulo: 'Detalle de puerta', desc: 'Sistema guillotina con contrapeso' },
];

const parrillasInox = [
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.37.jpeg', titulo: 'Premium con horno', desc: 'Acero inoxidable pulido con horno empotrado' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.34.jpeg', titulo: 'Doble parrilla', desc: 'Dos módulos con horno de pizza central' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.15.jpeg', titulo: 'Interior inox', desc: 'Recubrimiento completo en acero inoxidable' },
  { imagen: '/images/griglia/cierre-inox-01.jpg', titulo: 'Cierre pulido', desc: 'Acabado espejo de alta gama' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.37 (1).jpeg', titulo: 'Cajones inox', desc: 'Sistema de almacenamiento premium' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.37 (2).jpeg', titulo: 'Vista lateral', desc: 'Integración perfecta con la construcción' },
];

const quinchos = [
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.36.jpeg', titulo: 'Quincho con horno', desc: 'Sistema doble: horno de barro + parrilla' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.38.jpeg', titulo: 'Quincho completo', desc: 'Parrilla, cocina y pileta integrada' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.46.00.jpeg', titulo: 'Proyecto en obra', desc: 'Instalación en casa de campo' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.36 (1).jpeg', titulo: 'Sector cocina', desc: 'Mesada con pileta y almacenamiento' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.39 (1).jpeg', titulo: 'Estilo rústico', desc: 'Combinación hierro y madera' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.58.jpeg', titulo: 'Mueble bajo', desc: 'Bajomesada con pileta integrada' },
