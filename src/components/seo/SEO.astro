---
export interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const {
  title,
  description,
  image = '/logos/logo.png',
  canonical,
  type = 'website',
  noindex = false,
} = Astro.props;

const siteUrl = 'https://www.metalurgicabotomariani.com.ar';
const fullTitle = `${title} | Metalurgica Boto Mariani`;
const imageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
const canonicalUrl = canonical || Astro.url.href;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:site_name" content="Metalurgica Boto Mariani" />
<meta property="og:locale" content="es_AR" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalUrl} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />

<!-- Geo Tags -->
<meta name="geo.region" content="AR-B" />
<meta name="geo.placename" content="Malvinas Argentinas, Buenos Aires" />

<!-- Schema.org JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Metalurgica Boto Mariani SRL",
  "alternateName": "MBM",
  "url": siteUrl,
  "logo": `${siteUrl}/logos/logo.png`,
  "description": "Fabricación y construcción de infraestructura metalmecánica. Estructuras metálicas, gabinetes eléctricos, shelters, construcción modular y arquitectura metálica.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Yatay 44",
    "addressLocality": "Malvinas Argentinas",
    "addressRegion": "Buenos Aires",
    "postalCode": "1851",
    "addressCountry": "AR"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+54-11-4281-5797",
    "contactType": "sales",
    "availableLanguage": "Spanish"
  },
  "sameAs": []
})} />
