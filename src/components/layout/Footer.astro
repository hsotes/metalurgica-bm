---
import { siteConfig, businessUnits } from '../../config/site';

const { contact, company } = siteConfig;
const currentYear = new Date().getFullYear();

const companyLinks = [
  { name: 'Nosotros', href: '/nosotros/' },
  { name: 'Contacto', href: '/contacto/' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main Footer -->
  <div class="container py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <!-- Logo: Isotipo + Texto -->
        <a href="/" class="flex items-center gap-3 mb-4">
          <img
            src="/logos/isotipo.svg"
            alt="MBM"
            class="h-12 w-12"
          />
          <div class="flex flex-col leading-tight">
            <span class="font-questrial text-lg tracking-wide">
              <span class="text-white">METALÚRGICA BOTO </span><span class="text-primary-light">MARIANI</span>
            </span>
          </div>
        </a>
        <p class="text-sm text-gray-400 mb-4">
          {company.experience} de experiencia en {company.slogan.toLowerCase()}.
          {company.description}
        </p>
        <div class="flex flex-wrap items-center gap-2">
          <span class="bg-accent text-gray-900 text-xs font-bold px-2 py-1 rounded">
            Certificación INTI
          </span>
          <span class="bg-blue-500 text-white text-xs font-bold px-2 py-1 rounded">
            ISO 9001
          </span>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white font-semibold uppercase tracking-wide mb-4">
          Unidades de Negocio
        </h3>
        <ul class="space-y-2">
          {businessUnits.map((unit) => (
            <li>
              <a
                href={unit.slug}
                class="text-sm text-gray-400 hover:text-white transition-colors inline-flex items-center"
              >
                {unit.name}
                {unit.badge && (
                  <span class="ml-2 bg-accent text-gray-900 text-[10px] font-bold px-1.5 py-0.5 rounded">
                    {unit.badge}
                  </span>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-white font-semibold uppercase tracking-wide mb-4">
          Empresa
        </h3>
        <ul class="space-y-2">
          {companyLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-gray-400 hover:text-white transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white font-semibold uppercase tracking-wide mb-4">
          Contacto
        </h3>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-accent mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-sm text-gray-400">
              {contact.address.street}, {contact.address.locality}<br />
              CP {contact.address.postalCode} - {contact.address.province}
            </span>
          </li>
          <li class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-accent shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="text-sm text-gray-400 hover:text-white transition-colors">
              {contact.phone}
            </a>
          </li>
          <li class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-accent shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:${contact.email}`} class="text-sm text-gray-400 hover:text-white transition-colors">
              {contact.email}
            </a>
          </li>
        </ul>

        <!-- Redes Sociales -->
        <div class="flex items-center space-x-4 mt-6">
          <a
            href={siteConfig.urls.linkedin}
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a
            href={siteConfig.urls.instagram}
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="Instagram"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container py-6">
      <p class="text-sm text-gray-500 text-center">
        &copy; {currentYear} {company.name}. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
