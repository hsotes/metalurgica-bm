  { imagen: '/images/estructuras/WhatsApp Image 2026-02-02 at 08.44.53.jpeg', titulo: 'Torreta de telecomunicaciones', desc: 'Torre instalada con paneles' },
  { imagen: '/images/estructuras/torreta_movil-01.jpg', titulo: 'Torreta móvil', desc: 'Sistema desplegable sobre trailer' },
