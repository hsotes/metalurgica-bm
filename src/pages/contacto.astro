---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';

const { contact, company } = siteConfig;
---

<BaseLayout
  title="Contacto"
  description={`Contactá a ${company.name}. Solicitá cotización para estructuras metálicas, gabinetes certificados INTI, construcción modular y parrillas. Ubicados en ${contact.address.locality}, Buenos Aires.`}
>
  <!-- Hero -->
  <section class="bg-primary text-white py-16">
    <div class="container">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          CONTACTO
        </h1>
        <p class="text-xl text-gray-200">
          Estamos para ayudarte. Contanos sobre tu proyecto y te asesoramos sin compromiso.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Form -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Envianos tu consulta</h2>

          <form class="space-y-6" action="https://formspree.io/f/mkozpjoy" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="nombre" class="block text-sm font-semibold text-gray-700 mb-2">
                  Nombre *
                </label>
                <input
                  type="text"
                  id="nombre"
                  name="nombre"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  placeholder="Tu nombre"
                />
              </div>
              <div>
                <label for="apellido" class="block text-sm font-semibold text-gray-700 mb-2">
                  Apellido *
                </label>
                <input
                  type="text"
                  id="apellido"
                  name="apellido"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  placeholder="Tu apellido"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  placeholder="tu@email.com"
                />
              </div>
              <div>
                <label for="telefono" class="block text-sm font-semibold text-gray-700 mb-2">
                  Teléfono *
                </label>
                <input
                  type="tel"
                  id="telefono"
                  name="telefono"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  placeholder="+54 9 11 1234-5678"
                />
              </div>
            </div>

            <div>
              <label for="servicio" class="block text-sm font-semibold text-gray-700 mb-2">
                ¿Qué servicio te interesa?
              </label>
              <select
                id="servicio"
                name="servicio"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
              >
                <option value="">Seleccioná una opción</option>
                <option value="tbox">Linea TBex (Gabinetes y Shelters)</option>
                <option value="modular">Construcción Modular</option>
                <option value="estructuras">Estructuras Industriales</option>
                <option value="arquitectura">Arquitectura Metálica</option>
                <option value="griglia">Linea Griglia (Parrillas)</option>
                <option value="otro">Otro</option>
              </select>
            </div>

            <div>
              <label for="mensaje" class="block text-sm font-semibold text-gray-700 mb-2">
                Mensaje *
              </label>
              <textarea
                id="mensaje"
                name="mensaje"
                required
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Contanos sobre tu proyecto..."
              ></textarea>
            </div>

            <input type="hidden" name="_subject" value={`Nueva consulta - ${company.name}`} />
            <!-- Honeypot anti-spam: campo invisible para bots -->
            <input type="text" name="_gotcha" style="display:none !important" tabindex="-1" autocomplete="off" />

            <button
              type="submit"
              class="w-full btn btn-primary text-base py-4"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Información de contacto</h2>

          <div class="space-y-6 mb-8">
            <!-- Dirección -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Dirección</h3>
                <p class="text-gray-600">
                  {contact.address.street}<br />
                  {contact.address.locality}, CP {contact.address.postalCode}<br />
                  {contact.address.province}, {contact.address.country}
                </p>
              </div>
            </div>

            <!-- Teléfono -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Teléfono</h3>
                <p class="text-gray-600">
                  <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="hover:text-primary">
                    {contact.phone}
                  </a>
                </p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">Email</h3>
                <p class="text-gray-600">
                  <a href={`mailto:${contact.email}`} class="hover:text-primary">{contact.email}</a>
                </p>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-[#25D366]/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">WhatsApp</h3>
                <p class="text-gray-600">
                  <a href={`https://wa.me/${contact.phoneWhatsApp}`} target="_blank" rel="noopener noreferrer" class="hover:text-[#25D366]">
                    Chateá con nosotros
                  </a>
                </p>
              </div>
            </div>
          </div>

          <!-- Mapa real de Malvinas Argentinas -->
          <div class="bg-gray-100 rounded-lg overflow-hidden h-64">
            <iframe
              src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3289.0!2d${contact.coordinates.lng}!3d${contact.coordinates.lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb0!2sYatay%2044%2C%20Malvinas%20Argentinas!5e0!3m2!1ses-419!2sar!4v1706816400000`}
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Ubicación de Metalurgica Boto Mariani"
            ></iframe>
          </div>

          <!-- Horarios -->
          <div class="mt-6 p-4 bg-gray-50 rounded-lg">
            <h3 class="font-semibold text-gray-900 mb-2">Horario de Atención</h3>
            <p class="text-sm text-gray-600">
              Lunes a Viernes: {contact.hours.weekdays}<br />
              Sábados: {contact.hours.saturday}<br />
              Domingos: {contact.hours.sunday}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA WhatsApp -->
  <section class="py-12 bg-[#25D366]">
    <div class="container text-center">
      <h2 class="text-2xl font-bold text-white mb-4">¿Preferís contactarnos por WhatsApp?</h2>
      <p class="text-white/90 mb-6">Respondemos rápido. Escribinos y te asesoramos.</p>
      <a
        href={`https://wa.me/${contact.phoneWhatsApp}?text=${encodeURIComponent('Hola, me gustaría recibir información sobre sus servicios.')}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center space-x-2 bg-white text-[#25D366] px-8 py-4 rounded-lg font-bold hover:bg-gray-100 transition-colors"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span>Abrir WhatsApp</span>
      </a>
    </div>
  </section>
</BaseLayout>
