---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const categories = [...new Set(posts.map(post => post.data.category))];

const formatDate = (date: Date) => {
  return date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout
  title="Blog | Metalúrgica Boto Mariani"
  description="Artículos técnicos, guías y tendencias sobre metalurgia, estructuras metálicas, parrillas y arquitectura en metal."
>
  <!-- Hero -->
  <section class="relative bg-gray-900 text-white py-20">
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-gray-900/60"></div>
    <div class="container relative z-10">
      <p class="text-accent font-semibold uppercase tracking-widest text-sm mb-3">Conocimiento y experiencia</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog MBM</h1>
      <p class="text-xl text-gray-300 max-w-2xl">
        Artículos técnicos, guías prácticas y tendencias de la industria metalúrgica. Más de 30 años de experiencia compartidos.
      </p>
    </div>
  </section>

  <!-- Categorías -->
  <section class="bg-gray-50 border-b border-gray-200">
    <div class="container py-4">
      <div class="flex flex-wrap gap-2 items-center">
        <span class="text-sm font-semibold text-gray-500 uppercase tracking-wide mr-2">Categorías:</span>
        <a href="/blog/" class="px-3 py-1 text-sm font-medium rounded-full bg-primary text-white">
          Todas
        </a>
        {categories.map((cat) => (
          <span class="px-3 py-1 text-sm font-medium rounded-full bg-white text-gray-700 border border-gray-300">
            {cat}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Grid de artículos -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
            <a href={`/blog/${post.id}/`} class="block">
              <!-- Imagen -->
              <div class="relative aspect-video overflow-hidden">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
                <div class="absolute top-3 left-3">
                  <span class="bg-accent text-gray-900 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                    {post.data.category}
                  </span>
                </div>
              </div>

              <!-- Contenido -->
              <div class="p-6">
                <time class="text-sm text-gray-400 font-medium" datetime={post.data.date.toISOString()}>
                  {formatDate(post.data.date)}
                </time>
                <h2 class="text-lg font-bold text-gray-900 mt-2 mb-3 group-hover:text-primary transition-colors line-clamp-2">
                  {post.data.title}
                </h2>
                <p class="text-gray-600 text-sm line-clamp-2 mb-4">
                  {post.data.description}
                </p>
                <span class="text-primary font-semibold text-sm inline-flex items-center gap-1">
                  Leer más
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-20">
          <p class="text-gray-500 text-lg">No hay artículos publicados todavía.</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-primary text-white py-16">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">¿Tenés un proyecto en mente?</h2>
      <p class="text-gray-300 mb-8 max-w-xl mx-auto">
        Contactanos para recibir asesoramiento técnico y un presupuesto sin compromiso.
      </p>
      <a href="/contacto/" class="btn btn-accent text-sm">
        Solicitar presupuesto
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
