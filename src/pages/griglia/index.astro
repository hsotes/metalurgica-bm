const procesosYDetalles = [
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.44.55.jpeg', titulo: 'Fabricación', desc: 'Proceso de armado en taller' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.44.56.jpeg', titulo: 'Soldadura', desc: 'Uniones de alta resistencia' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.45.11.jpeg', titulo: 'Ensamble', desc: 'Montaje de componentes' },
  { imagen: '/images/griglia/bajomesada-01.jpg', titulo: 'Bajomesada', desc: 'Mueble de almacenamiento' },
  { imagen: '/images/griglia/cierre-hierro-01.jpg', titulo: 'Cierre hierro', desc: 'Acabado con pintura epoxi' },
  { imagen: '/images/griglia/WhatsApp Image 2026-02-02 at 08.47.09.jpeg', titulo: 'Línea gastronómica', desc: 'Mesada inox para cocinas comerciales' },
];
---

<BaseLayout
  title="Linea Griglia - Parrillas y Cierres a Medida"
  description="Parrillas Griglia a medida en 5 tamaños (800mm a 1600mm), puertas guillotina con contrapeso y cierres de parrilla en hierro o acero inoxidable. Fabricación artesanal en Buenos Aires."
>
  <!-- Hero with Real Image -->
  <section class="relative min-h-[60vh] flex items-center">
    <div class="absolute inset-0">
      <img
        src="/images/griglia/cierre-inox-01.jpg"
        alt="Cierre de parrilla en acero inoxidable - Linea Griglia"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/80 to-gray-900/60"></div>
    </div>

    <div class="container relative z-10 py-20">
      <div class="max-w-3xl">
        <div class="inline-flex items-center space-x-2 bg-orange-500 text-white px-4 py-2 rounded-full mb-6 font-bold text-sm">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
          </svg>
          <span>FABRICACIÓN ARTESANAL</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          <span class="text-orange-400">LINEA</span><br />
          <span class="text-white">Griglia</span>
        </h1>

        <p class="text-xl text-gray-300 mb-8 leading-relaxed">
          Parrillas a medida, puertas guillotina y cierres de parrilla.
          Fabricación artesanal de alta calidad en <strong class="text-white">hierro o acero inoxidable</strong>
          para disfrutar los mejores asados.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contacto" class="btn bg-orange-500 hover:bg-orange-600 text-white text-base px-8">
            Solicitar Cotización
          </a>
          <a href="#modelos" class="btn btn-outline border-white text-white hover:bg-white hover:text-gray-900 text-base px-8">
            Ver Modelos
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="bg-gray-900 py-8">
    <div class="container">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-3xl font-bold text-orange-400">+500</div>
          <div class="text-sm text-gray-400 mt-1">Parrillas instaladas</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-orange-400">5</div>
          <div class="text-sm text-gray-400 mt-1">Tamaños estándar</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-orange-400">Hierro/Inox</div>
          <div class="text-sm text-gray-400 mt-1">Dos materiales</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-orange-400">100%</div>
          <div class="text-sm text-gray-400 mt-1">A medida</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Models Section -->
  <section id="modelos" class="section">
    <div class="container">
      <div class="text-center mb-12">
        <span class="inline-block bg-orange-500/10 text-orange-600 px-4 py-1 rounded-full text-sm font-semibold mb-4">
          MODELOS DISPONIBLES
        </span>
        <h2 class="section-title">Parrillas Griglia</h2>
        <p class="section-subtitle mx-auto">
          5 tamaños disponibles para adaptarse perfectamente a tu espacio. Cada modelo incluye brasero, parrilla regulable y sistema de extracción.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 pt-4">
        {models.map((model) => (
          <div class={`bg-white border-2 ${model.popular ? 'border-orange-500' : 'border-gray-200'} rounded-xl p-6 text-center hover:shadow-lg transition-shadow relative overflow-visible`}>
            {model.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-10">
                <span class="bg-orange-500 text-white text-xs font-bold px-3 py-1.5 rounded-full whitespace-nowrap shadow-md">
                  MÁS VENDIDO
                </span>
              </div>
            )}
            <div class="text-4xl font-bold text-primary mb-2 mt-2">{model.size}</div>
            <div class="text-sm text-gray-600 mb-3">mm de frente</div>
            <div class="space-y-1 text-xs text-gray-500">
              <div>Ancho: {model.parrilla.anchoTotal} mm</div>
              <div>Alto: {model.parrilla.altoFrontal} mm</div>
              <div>Boca: Ø{model.parrilla.chimenea} mm</div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <span class="text-sm font-medium text-gray-700">{model.description}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galería: Parrillas en Hierro -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-1 bg-orange-500"></div>
          <span class="text-orange-600 font-semibold text-sm uppercase tracking-wider">Línea Clásica</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Parrillas en Hierro</h2>
        <p class="text-gray-600 max-w-3xl">
          Nuestras parrillas en hierro combinan la tradición del asado argentino con diseño contemporáneo.
          Cada pieza recibe tratamiento anticorrosivo y pintura epoxi de alta temperatura que garantiza
          durabilidad y un acabado negro mate elegante.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {parrillasHierro.map((item) => (
          <div class="group relative overflow-hidden rounded-xl aspect-[4/5]">
            <img
              src={item.imagen}
              alt={item.titulo}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="bg-gray-700 text-white text-xs font-bold px-2 py-1 rounded mb-2 inline-block">HIERRO</span>
                <p class="text-white font-bold">{item.titulo}</p>
                <p class="text-gray-300 text-sm">{item.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galería: Parrillas en Acero Inoxidable -->
  <section class="section bg-white">
    <div class="container">
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-1 bg-orange-500"></div>
          <span class="text-orange-600 font-semibold text-sm uppercase tracking-wider">Línea Premium</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Parrillas en Acero Inoxidable</h2>
        <p class="text-gray-600 max-w-3xl">
          Para quienes buscan lo mejor, nuestra línea en acero inoxidable AISI 304 ofrece resistencia superior
          a la corrosión, fácil limpieza y un acabado pulido espejo que eleva cualquier espacio exterior.
          Ideal para casas de diseño, countries y proyectos de arquitectura contemporánea.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {parrillasInox.map((item) => (
          <div class="group relative overflow-hidden rounded-xl aspect-[4/5]">
            <img
              src={item.imagen}
              alt={item.titulo}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="bg-orange-500 text-white text-xs font-bold px-2 py-1 rounded mb-2 inline-block">INOX</span>
                <p class="text-white font-bold">{item.titulo}</p>
                <p class="text-gray-300 text-sm">{item.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galería: Quinchos Completos -->
  <section class="section bg-gray-900 text-white">
    <div class="container">
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-1 bg-orange-500"></div>
          <span class="text-orange-400 font-semibold text-sm uppercase tracking-wider">Proyectos Integrales</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Quinchos Completos</h2>
        <p class="text-gray-400 max-w-3xl">
          Diseñamos y fabricamos el quincho completo: parrilla, horno de barro o pizza, sector de cocina con pileta
          y mesada, y todo el mobiliario de almacenamiento. Trabajamos junto con arquitectos y constructoras para
          integrar perfectamente cada proyecto al diseño de tu casa.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {quinchos.map((item) => (
          <div class="group relative overflow-hidden rounded-xl aspect-[4/5]">
            <img
              src={item.imagen}
              alt={item.titulo}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="bg-orange-500 text-white text-xs font-bold px-2 py-1 rounded mb-2 inline-block">QUINCHO</span>
                <p class="text-white font-bold">{item.titulo}</p>
                <p class="text-gray-300 text-sm">{item.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galería: Proceso y Detalles -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-1 bg-orange-500"></div>
          <span class="text-orange-600 font-semibold text-sm uppercase tracking-wider">Fabricación Artesanal</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Nuestro Proceso</h2>
        <p class="text-gray-600 max-w-3xl">
          Cada parrilla Griglia es fabricada artesanalmente en nuestro taller. Desde el corte y plegado de chapa
          hasta la soldadura, pintura y ensamble final, cuidamos cada detalle para entregar un producto que
          dure toda la vida.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {procesosYDetalles.map((item) => (
          <div class="group relative overflow-hidden rounded-xl aspect-square">
            <img
              src={item.imagen}
              alt={item.titulo}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <p class="text-white font-bold">{item.titulo}</p>
                <p class="text-gray-300 text-sm">{item.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Products Detail -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <span class="inline-block bg-orange-500/10 text-orange-600 px-4 py-1 rounded-full text-sm font-semibold mb-4">
          SISTEMA COMPLETO
        </span>
        <h2 class="section-title">Componentes Griglia</h2>
        <p class="section-subtitle mx-auto">
          Cada elemento es diseñado para trabajar en conjunto, brindando la mejor experiencia de asado.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white border border-gray-200 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-14 h-14 bg-orange-500/10 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Parrilla y Brasero</h3>
          <p class="text-gray-600 mb-4">
            El corazón de la Griglia: brasero de fundición con regulador de altura a cadena o cremallera.
            Parrilla de varillas de acero con separación óptima para todo tipo de cortes.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Brasero de fundición de hierro
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Parrilla de varillas calibradas
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Regulador de altura a cadena
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Campana con chimenea y sombrerete
            </li>
          </ul>
        </div>

        <div class="bg-white border border-gray-200 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-14 h-14 bg-orange-500/10 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Puerta Guillotina</h3>
          <p class="text-gray-600 mb-4">
            Nuestro sistema de cierre con contrapeso permite abrir y cerrar la parrilla con un solo dedo.
            El vidrio templado de 6mm resiste el calor y permite ver el fuego mientras cocinas.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Sistema de contrapeso balanceado
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Vidrio templado 6mm resistente
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Cierre hermético anti-humo
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Tiradores de acero inoxidable
            </li>
          </ul>
        </div>

        <div class="bg-white border border-gray-200 rounded-xl p-8 hover:shadow-lg transition-shadow">
          <div class="w-14 h-14 bg-orange-500/10 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Cierre y Bajomesada</h3>
          <p class="text-gray-600 mb-4">
            El mueble que integra todo: chapa plegada de 1.6mm con tratamiento anticorrosivo, cajones
            para carbón y utensilios, y mesada de acero inoxidable. Diseñamos a medida de tu espacio.
          </p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Chapa plegada 1.6mm
            </li>
            <li class="flex items-center">
              <svg class="w-4 h-4 text-orange-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Hierro o acero inoxidable
            </li>
