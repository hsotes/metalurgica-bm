---
import SEO from '../components/seo/SEO.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import WhatsAppButton from '../components/layout/WhatsAppButton.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const { title, description, image, type, noindex } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/logos/logo.png" />

    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      noindex={noindex}
    />

    <!-- Preconnect para fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Fuente Questrial para el logo -->
    <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet" />
  </head>

  <body class="min-h-screen flex flex-col bg-white">
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
    <WhatsAppButton />
  </body>
</html>
