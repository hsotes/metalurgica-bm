---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const featuredPost = posts[0];
const olderPosts = posts.slice(1);

const categories = [...new Set(posts.map(post => post.data.category))];

const formatDate = (date: Date) => {
  return date.toLocaleDateString('es-AR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout
  title="Blog | Metalúrgica Boto Mariani"
  description="Artículos técnicos, guías y tendencias sobre metalurgia, estructuras metálicas, parrillas y arquitectura en metal."
>
  <!-- Artículo Destacado -->
  {featuredPost && (
    <section class="bg-gray-900 text-white">
      <div class="container py-12 lg:py-16">
        <p class="text-accent font-semibold uppercase tracking-widest text-sm mb-6">Último artículo</p>
        <a href={`/blog/${featuredPost.id}/`} class="group block">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <!-- Imagen -->
            <div class="relative aspect-video overflow-hidden rounded-lg">
              <img
                src={featuredPost.data.image}
                alt={featuredPost.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/40 to-transparent"></div>
            </div>

            <!-- Contenido -->
            <div>
              <div class="flex flex-wrap items-center gap-3 mb-4">
                <span class="bg-accent text-gray-900 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                  {featuredPost.data.category}
                </span>
                <time class="text-sm text-gray-400" datetime={featuredPost.data.date.toISOString()}>
                  {formatDate(featuredPost.data.date)}
                </time>
              </div>

              <h1 class="text-3xl md:text-4xl font-bold text-white mb-4 group-hover:text-accent transition-colors duration-300">
                {featuredPost.data.title}
              </h1>

              <p class="text-gray-300 text-lg leading-relaxed mb-6">
                {featuredPost.data.description}
              </p>

              <span class="inline-flex items-center gap-2 bg-accent text-gray-900 font-bold text-sm uppercase tracking-wide px-6 py-3 rounded group-hover:bg-accent-light transition-colors">
                Leer artículo completo
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- Categorías -->
  <section class="bg-gray-50 border-b border-gray-200">
    <div class="container py-4">
      <div class="flex flex-wrap gap-2 items-center">
        <span class="text-sm font-semibold text-gray-500 uppercase tracking-wide mr-2">Categorías:</span>
        <a href="/blog/" class="px-3 py-1 text-sm font-medium rounded-full bg-primary text-white">
          Todas
        </a>
        {categories.map((cat) => (
          <span class="px-3 py-1 text-sm font-medium rounded-full bg-white text-gray-700 border border-gray-300 hover:border-primary hover:text-primary transition-colors cursor-default">
            {cat}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Grid de artículos anteriores -->
  {olderPosts.length > 0 && (
    <section class="section">
      <div class="container">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Más artículos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {olderPosts.map((post) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
              <a href={`/blog/${post.id}/`} class="block">
                <!-- Imagen -->
                <div class="relative aspect-video overflow-hidden">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                  <div class="absolute top-3 left-3">
                    <span class="bg-accent text-gray-900 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                      {post.data.category}
                    </span>
                  </div>
                </div>

                <!-- Contenido -->
                <div class="p-6">
                  <time class="text-sm text-gray-400 font-medium" datetime={post.data.date.toISOString()}>
                    {formatDate(post.data.date)}
                  </time>
                  <h3 class="text-lg font-bold text-gray-900 mt-2 mb-3 group-hover:text-primary transition-colors line-clamp-2">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm line-clamp-2 mb-4">
                    {post.data.description}
                  </p>
                  <span class="text-primary font-semibold text-sm inline-flex items-center gap-1">
                    Leer más
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="bg-primary text-white py-16">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-4">¿Tenés un proyecto en mente?</h2>
      <p class="text-gray-300 mb-8 max-w-xl mx-auto">
        Contactanos para recibir asesoramiento técnico y un presupuesto sin compromiso.
      </p>
      <a href="/contacto/" class="btn btn-accent text-sm">
        Solicitar presupuesto
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
